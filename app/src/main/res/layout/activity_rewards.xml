<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/layout"
    android:orientation="vertical"
    tools:context=".Rewards_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/gradient_background">


        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rewards"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collect Redeemable Rewards"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/blue"/>


            <LinearLayout
                android:id="@+id/btnTreat_1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/treat_0"
                android:padding="20dp"
                android:orientation="vertical"/>

            <LinearLayout
                android:id="@+id/btnTreat_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/treat_2"
                android:padding="20dp"

                android:orientation="vertical"/>


        </LinearLayout>


    </ScrollView>


</LinearLayout>